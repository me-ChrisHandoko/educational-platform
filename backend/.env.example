# Database Configuration
DATABASE_URL="postgresql://postgres:mydevelopment@localhost:3479/educational_platform"

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-jwt-access-key-here-32-chars-min"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-here-32-chars-min"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration
NODE_ENV="development"
PORT=3001
API_PREFIX="api/v1"

# Security Configuration
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1

# Session & Redis Configuration
SESSION_SECRET="your-session-secret-here"
REDIS_URL="redis://localhost:6379"
REDIS_DEFAULT_TTL=300
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000

# Rate Limiting (for future use)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Email Configuration (for future use in AUTH-006)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="noreply@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="Educational Platform <noreply@example.com>"

# Monitoring & Logging (for future use in AUTH-008)
LOG_LEVEL="info"
SENTRY_DSN=""

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_CORS=true
TEST_DATABASE_URL="postgresql://postgres:mydevelopment@localhost:3479/educational_platform"
TEST_TIMEOUT=30000
TEST_PARALLEL_WORKERS=1

# Performance Configuration
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090